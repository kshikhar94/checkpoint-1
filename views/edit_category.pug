extends layout

block content
	.container
		h1 #{title}

		form(method='post', action='/categories/edit/'+category._id)
			.form-group
				| Title:
				br
				input.form-control(type='text', name='title', value=category.title)
				br
				|  Description:
				br
				textarea.form-control(name='description') #{category.description}
				|
				br
				input(class= "btn btn-primary" type='submit', name='submit', value='Save')
				| &nbsp &nbsp &nbsp &nbsp 
				a(class= "btn btn-primary" href='/manage/categories') Back
				| &nbsp &nbsp &nbsp &nbsp 
				a.btn.btn-danger.category-delete.pull-right(href='/manage/categories', data-cat-id=category._id) Delete
